---
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const bookingUrl = 'https://calendar.app.google/5aJYvSXHJigk6raE9';
---

<section class="py-24 bg-bg-secondary relative overflow-hidden">
  <!-- Background accent -->
  <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-accent/5"></div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl sm:text-4xl font-bold mb-6">
      {t('cta.title')}
    </h2>
    <p class="text-xl text-text-secondary mb-10 max-w-2xl mx-auto">
      {t('cta.subtitle')}
    </p>

    <a
      href={bookingUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="group inline-flex items-center gap-3 bg-accent hover:bg-accent-dark text-bg-primary px-10 py-5 rounded-xl font-semibold text-xl transition-all duration-300 hover:-translate-y-1 hover:shadow-lg hover:shadow-accent/25"
    >
      {t('cta.button')}
      <svg class="w-6 h-6 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </a>

    <!-- Contact alternatives -->
    <div class="mt-12 flex flex-col sm:flex-row justify-center items-center gap-6 text-text-secondary">
      <a href="mailto:contact@radugeo.com" class="hover:text-accent transition-colors flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        contact@radugeo.com
      </a>
      <span class="hidden sm:inline text-text-muted">|</span>
      <a href="tel:+4917658830284" class="hover:text-accent transition-colors flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        +49 176 588 30284
      </a>
    </div>
  </div>
</section>
