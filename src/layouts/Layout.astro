---
import '../styles/global.css';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/translations';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Radu Georoceanu - Legacy Modernization Expert', description = 'Senior Software Engineer & Architect helping companies modernize legacy systems, accelerate development, and integrate AI.' } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const otherLang = lang === 'en' ? 'de' : 'en';
const otherLangPath = lang === 'en' ? '/de' : '/';

const bookingUrl = 'https://calendar.app.google/5aJYvSXHJigk6raE9';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Radu Georoceanu" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={lang === 'de' ? 'de_DE' : 'en_US'} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />

    <!-- Alternate language versions for SEO -->
    <link rel="alternate" hreflang="en" href="https://radugeo.com/" />
    <link rel="alternate" hreflang="de" href="https://radugeo.com/de/" />
    <link rel="alternate" hreflang="x-default" href="https://radugeo.com/" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>
  <body class="bg-bg-primary text-text-primary">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 glass border-b border-border/50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo -->
          <a href={getLocalizedPath('/', lang)} class="flex items-center">
            <picture>
              <source srcset="/logo-nav.webp" type="image/webp" />
              <img src="/logo-nav.png" alt="Radu Georoceanu" class="h-10 w-auto" width="147" height="80" loading="eager" />
            </picture>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-8">
            <a href="#services" class="text-text-secondary hover:text-text-primary transition-colors">{t('nav.services')}</a>
            <a href="#about" class="text-text-secondary hover:text-text-primary transition-colors">{t('nav.about')}</a>
            <a href="#testimonials" class="text-text-secondary hover:text-text-primary transition-colors">{t('nav.testimonials')}</a>

            <!-- Language Switcher -->
            <a href={otherLangPath} class="text-text-secondary hover:text-text-primary transition-colors uppercase text-sm font-medium">
              {otherLang}
            </a>

            <!-- CTA Button -->
            <a
              href={bookingUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-accent hover:bg-accent-dark text-bg-primary px-4 py-2 rounded-lg font-medium transition-all hover:-translate-y-0.5"
            >
              {t('nav.bookCall')}
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button
            id="mobile-menu-button"
            class="md:hidden p-2 text-text-secondary hover:text-text-primary"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-border/50">
        <div class="px-4 py-4 space-y-4">
          <a href="#services" class="block text-text-secondary hover:text-text-primary transition-colors">{t('nav.services')}</a>
          <a href="#about" class="block text-text-secondary hover:text-text-primary transition-colors">{t('nav.about')}</a>
          <a href="#testimonials" class="block text-text-secondary hover:text-text-primary transition-colors">{t('nav.testimonials')}</a>
          <a href={otherLangPath} class="block text-text-secondary hover:text-text-primary transition-colors uppercase text-sm font-medium">{otherLang}</a>
          <a
            href={bookingUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-accent hover:bg-accent-dark text-bg-primary px-4 py-2 rounded-lg font-medium text-center transition-colors"
          >
            {t('nav.bookCall')}
          </a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-bg-secondary border-t border-border py-12">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
          <div class="flex items-center gap-4">
            <picture>
              <source srcset="/logo-footer.webp" type="image/webp" />
              <img src="/logo-footer.png" alt="Radu Georoceanu" class="h-8 w-auto" width="110" height="60" loading="lazy" />
            </picture>
            <span class="text-text-muted">|</span>
            <span class="text-text-secondary">{t('footer.location')}</span>
          </div>

          <div class="flex items-center gap-6">
            <!-- LinkedIn -->
            <a
              href="https://www.linkedin.com/in/rgeoroceanu"
              target="_blank"
              rel="noopener noreferrer"
              class="text-text-secondary hover:text-accent transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>

            <!-- Email -->
            <a
              href="mailto:contact@radugeo.com"
              class="text-text-secondary hover:text-accent transition-colors"
              aria-label="Email"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>

          <div class="flex items-center gap-6 text-sm text-text-secondary">
            <a href={getLocalizedPath('/impressum', lang)} class="hover:text-accent transition-colors">
              {t('footer.impressum')}
            </a>
            <a href={lang === 'de' ? '/de/datenschutz' : '/privacy'} class="hover:text-accent transition-colors">
              {t('footer.privacy')}
            </a>
          </div>

          <p class="text-text-muted text-sm">
            &copy; {new Date().getFullYear()} Radu Georoceanu. {t('footer.rights')}
          </p>
        </div>
      </div>
    </footer>

    <!-- Language detection and mobile menu script -->
    <script is:inline>
      (function() {
        // Auto-detect language on first visit
        const currentPath = window.location.pathname;
        const isGermanPage = currentPath.startsWith('/de');
        const currentLang = isGermanPage ? 'de' : 'en';

        // Check if user has a saved preference or has visited before
        const savedLang = localStorage.getItem('preferred-lang');
        const hasVisited = localStorage.getItem('has-visited');

        if (!hasVisited) {
          // First visit - detect browser language
          localStorage.setItem('has-visited', 'true');

          const browserLang = navigator.language || navigator.userLanguage;
          const prefersDe = browserLang.toLowerCase().startsWith('de');

          if (prefersDe && !isGermanPage) {
            // Browser prefers German, redirect to German version
            localStorage.setItem('preferred-lang', 'de');
            window.location.replace('/de' + currentPath);
          } else if (!prefersDe && isGermanPage) {
            // Browser prefers English, redirect to English version
            localStorage.setItem('preferred-lang', 'en');
            window.location.replace(currentPath.replace('/de', '') || '/');
          } else {
            localStorage.setItem('preferred-lang', currentLang);
          }
        }

        // Save preference when user manually switches language
        document.addEventListener('DOMContentLoaded', function() {
          const langLinks = document.querySelectorAll('a[href="/de"], a[href="/"]');
          langLinks.forEach(link => {
            link.addEventListener('click', function() {
              const targetLang = this.getAttribute('href') === '/de' ? 'de' : 'en';
              localStorage.setItem('preferred-lang', targetLang);
            });
          });

          // Mobile menu functionality
          const menuButton = document.getElementById('mobile-menu-button');
          const mobileMenu = document.getElementById('mobile-menu');

          menuButton?.addEventListener('click', () => {
            mobileMenu?.classList.toggle('hidden');
          });

          mobileMenu?.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
              mobileMenu.classList.add('hidden');
            });
          });
        });
      })();
    </script>
  </body>
</html>
